def foo() {
  def version = readFile(file: 'hw2/version')
  def pattern = ~/(\d{1,3})\.(\d{1,3})\.\d{1,4}$/
  def newVersion = version.replaceFirst(pattern) { _,major,minor -> "${major}.${(minor as int) + 1}.0"}
  println "Version ${version} -> new ${newVersion}"
}


pipeline {
    agent any
    stages {
        
        stage('Example Build') {
            steps {
               script {
                   foo()
                }
            }
        }
    }
}
